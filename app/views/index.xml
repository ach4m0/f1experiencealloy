<Alloy>
	<Window class="main-window">
		<View class="actionbar">
			<View id="header_controller" class="header-controller" onClick="toggleMenu">
				<Button id="menu_icon" class="menu-icon"></Button>
				<Label id="header_title" class="header-title">F1 Experience</Label>
			</View>
		</View>
		<ScrollView class="main-content"></ScrollView>
		<ScrollView class="drivers-list-view"></ScrollView>
		<ScrollView class="teams-list-view"></ScrollView>
		<ScrollView class="races-list-view"></ScrollView>
		<!-- MENU -->
		<TableView id="menu_view" class="menu-view">
			<TableViewRow class="menu-row">
				<Label class="menu-row-text" text="L('drivers_title_upper')" onClick="menuItemFunction"></Label>
				<View class="border"></View>
			</TableViewRow>
			<TableViewRow class="menu-row">
				<Label class="menu-row-text" text="L('teams_title_upper')" onClick="menuItemFunction"></Label>
				<View class="border"></View>
			</TableViewRow>
			<TableViewRow class="menu-row">
				<Label class="menu-row-text" text="L('races_title_upper')" onClick="menuItemFunction"></Label>
				<View class="border"></View>
			</TableViewRow>
		</TableView>
	</Window>
</Alloy>